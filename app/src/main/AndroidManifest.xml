<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pandacorp.taskui">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
        android:name=".presentation.di.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BlueTheme">

        <!--        <receiver android:name=".presentation.notifications.ReminderBroadcast"  TODO: NOTIFICATION />-->
        <activity android:name=".presentation.ui.SetTaskActivity" />
        <activity
            android:name=".presentation.ui.settings.SettingsActivity"
            android:label="@string/createTask" />
        <activity
            android:name=".presentation.ui.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.pandacorp.taskui.presentation.ui.widget.WidgetSettingsActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:label="@string/settings"
            android:theme="@style/AlertDialogStyle">

        </activity>

        <service
            android:name="com.pandacorp.taskui.presentation.ui.widget.WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver
            android:name="com.pandacorp.taskui.presentation.ui.widget.WidgetProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_metadata" />
        </receiver>
    </application>

</manifest>