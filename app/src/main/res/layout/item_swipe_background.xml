<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/startItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/restoreColor"
            android:gravity="start|center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/bigDefaultMargin"
                android:src="@drawable/ic_restore" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mediumDefaultMargin"
                android:text="@string/restore"
                android:textColor="#fff"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/endItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="end|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mediumDefaultMargin"
                android:text="@string/delete"
                android:textColor="#fff"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/bigDefaultMargin"
                android:src="@drawable/ic_delete_recyclerview" />

        </LinearLayout>

    </FrameLayout>
</layout>