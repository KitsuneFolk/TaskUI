<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">?colorPrimaryDark</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="strokeColor">?android:textColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:colorPrimary">?android:attr/textColor</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="Theme.Material3.Dark.Dialog">
        <item name="android:colorBackground">?android:colorBackground</item>
        <item name="textColorAlertDialogListItem">?android:attr/textColor</item>
        <item name="color">?android:colorBackground</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="SnackBarStyle" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?android:attr/colorPrimary</item>
    </style>

    <style name="SnackBarButtonStyle" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="strokeColor">?android:textColor</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="SnackBarTextStyle" parent="@style/Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="FABStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="rippleColor">@null</item>
        <item name="android:backgroundTint">?colorPrimaryDark</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="borderWidth">1dp</item>
        <!--  Remove shadow  -->
        <item name="elevation">0dp</item>
    </style>

    <style name="PopUpMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_background_primarydark</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:textColor">?android:textColor</item>
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:textColor">?android:textColor</item>
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="itemIconTint">@color/item_color_state</item>
        <item name="itemTextColor">@color/item_color_state</item>
        <item name="itemBackground">@drawable/nav_view_background</item>
    </style>

</resources>