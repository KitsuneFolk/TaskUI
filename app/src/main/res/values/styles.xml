        <item name="android:textColorHint">@color/DarkTheme_colorAccent</item>
        <item name="android:textColorHighlight">@color/DarkTheme_colorAccent</item>
        <item name="android:colorControlActivated">@color/DarkTheme_colorAccent</item>
        <item name="android:windowBackground">@color/DarkTheme_Background</item>

        <item name="colorAccent">@color/DarkTheme_colorPrimaryDark</item>

    </style>

