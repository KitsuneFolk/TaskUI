<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorBackground">@color/BlueTheme_Background</item>
        <item name="colorPrimary">@color/BlueTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/BlueTheme_colorPrimary</item>
        <item name="colorAccent">@color/BlueTheme_colorAccent</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:navigationBarColor">@color/BlueTheme_colorPrimary</item>
        <item name="android:textColorSecondary">@color/BlueTheme_textColorSecondary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="buttonStyle">@style/BlueTheme_Button</item>
        <item name="editTextStyle">@style/BlueTheme_EditText</item>
        <item name="alertDialogTheme">@style/BlueTheme_AlertDialog</item>
        <item name="drawerArrowStyle">@style/BlueTheme_DrawerArrowToggle</item>
        <item name="snackbarStyle">@style/BlueTheme_SnackBar</item>
        <item name="android:datePickerDialogTheme">@style/BlueTheme_TimePicker</item>
        <item name="android:timePickerDialogTheme">@style/BlueTheme_TimePicker</item>

    </style>
    <style name="BlueTheme_Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/BlueTheme_ButtonColor</item>
        <item name="android:textColor">@color/TextColor</item>
    </style>
    <style name="BlueTheme_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textColorHint">@color/TextColor</item>
    </style>
    <style name="BlueTheme_DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@color/TextColor</item>
        <item name="color">@color/TextColor</item>

    </style>
    <style name="BlueTheme_AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!--  This theme needs for ListPreference background  -->
        <item name="android:colorBackground">@color/BlueTheme_Background</item>
        <item name="android:textColorSecondary">@color/TextColor</item>
        <item name="textColorAlertDialogListItem">@color/TextColor</item>
        <item name="color">@color/BlueTheme_Background</item>

    </style>
    <style name="BlueTheme_TimePicker" parent="Theme.AppCompat.Light.Dialog">

        <!--  This theme needs for DatePickerDialog and TimePickerDialog background  -->
        <item name="android:textColorPrimary">@color/BlueTheme_colorPrimaryDark</item>
        <item name="android:textColorHint">@color/BlueTheme_colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/BlueTheme_colorPrimaryDark</item>
        <item name="android:windowBackground">@color/BlueTheme_Background</item>

        <item name="colorAccent">@color/BlueTheme_colorPrimary</item>

    </style>
    <style name="BlueTheme_SnackBar" parent="Widget.Design.Snackbar">
        <item name="backgroundTint">@color/BlueTheme_colorPrimary</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:colorBackground">@color/DarkTheme_Background</item>
        <item name="colorPrimary">@color/DarkTheme_colorPrimary</item>
