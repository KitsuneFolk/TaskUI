<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget_BaseTheme" parent="Theme.Material3.Dark.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="materialCalendarTheme">@style/MaterialCalendarTheme</item>
        <item name="materialTimePickerTheme">@style/MaterialTimePickerTheme</item>
    </style>

    <style name="BlueTheme_Widget_MaterialAlertDialogStyle" parent="Widget_BaseTheme">
        <item name="colorPrimary">@color/BlueTheme_colorPrimary</item>
        <item name="colorAccent">@color/BlueTheme_colorAccent</item>
        <item name="color">@color/BlueTheme_colorBackground</item>
        <item name="android:colorBackground">@color/BlueTheme_colorBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DarkTheme_Widget_MaterialAlertDialogStyle" parent="Widget_BaseTheme">
        <item name="colorPrimary">@color/DarkTheme_colorPrimary</item>
        <item name="colorAccent">@color/DarkTheme_colorAccent</item>
        <item name="color">@color/DarkTheme_colorBackground</item>
        <item name="android:colorBackground">@color/DarkTheme_colorBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>