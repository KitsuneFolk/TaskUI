<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent ="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">#405bdf</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
    </style>
    <style name="BaseTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!--  Needed for the Back arrow color  -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- The amount of dimming when fragment is being dragged. -->
        <item name="fgl_scrim_amount">0.6</item>
        <!-- How much the underneath fragment will be shifted. -->
        <item name="fgl_parallax_factor">1.15</item>
        <!-- This overrides the duration of swipe animation using `navController.navigate(...)` and `navController
        .popBackStack()` methods.-->
        <item name="fgl_anim_duration">600</item>
        <!-- This overrides the elevation applied to the fragment view.-->
        <item name="fgl_elevation">0dp</item>

        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="floatingActionButtonPrimaryStyle">@style/FABStyle</item>
        <item name="alertDialogTheme">@style/MaterialAlertDialogStyle</item>
        <item name="popupMenuStyle">@style/PopUpMenuStyle</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
        <item name="snackbarButtonStyle">@style/SnackBarButtonStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackBarTextStyle</item>
        <item name="navigationViewStyle">@style/NavigationViewStyle</item>
        <item name="materialCalendarTheme">@style/MaterialCalendarTheme</item>
        <item name="materialTimePickerTheme">@style/MaterialTimePickerTheme</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>

    <style name="WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/no_anim</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">?colorPrimaryDark</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="strokeColor">?android:textColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:colorPrimary">?android:attr/textColor</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="Theme.Material3.Dark.Dialog">
        <!--  Disable Full window mode  -->
        <item name="android:colorBackground">?android:colorBackground</item>
        <item name="textColorAlertDialogListItem">?android:attr/textColor</item>
        <item name="color">?android:colorBackground</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="SnackBarStyle" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?android:attr/colorPrimary</item>
    </style>

    <style name="SnackBarButtonStyle" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="strokeColor">?android:textColor</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="SnackBarTextStyle" parent="@style/Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="FABStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="rippleColor">@null</item>
        <item name="android:backgroundTint">?colorPrimaryDark</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="borderWidth">1dp</item>
        <!--  Remove shadow  -->
        <item name="elevation">0dp</item>
    </style>

    <style name="PopUpMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_background_primarydark</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:textColor">?android:textColor</item>
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:textColor">?android:textColor</item>
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="itemIconTint">@color/item_color_state</item>
        <item name="itemTextColor">@color/item_color_state</item>
        <item name="itemBackground">@drawable/nav_view_background</item>
    </style>

</resources>